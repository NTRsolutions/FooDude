<manifest xmlns:android="http://schemas.android.com/apk/res/android"

    package="com.example.verbosetech.fooddude">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".MyApp"
        android:largeHeap="true">

        <activity android:name=".Activities.MainActivity"
            android:windowSoftInputMode="stateHidden|adjustResize">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>

        <activity android:name=".Activities.FoodActivity"></activity>
        <activity android:name=".Activities.FoodDetailActivity"></activity>
        <activity android:name=".Activities.CartActivity"></activity>
        <activity android:name=".Activities.ConfirmActivity"></activity>
        <activity android:name=".Activities.PaymentActivity"></activity>
        <activity android:name=".Activities.RefineActivity"></activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyAxqVQwWag-riGd7InSe6KPGfhZULaUbvU" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />


    </application>

</manifest>
